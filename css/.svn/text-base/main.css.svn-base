html 			{ height: 100% }
body 			{ height: 100%; margin: 0; padding: 0; }

/* Intro lightbox */
#fullscreen 	{ position:absolute; top:0px; left:0px;width:100%;background:white;height:100%;display:none;opacity:0.8;filter:alpha(opacity=80); z-index:100}
#lightbox		{ position:absolute;max-width:650px;max-height:650px; top:40; right:40; display:none; z-index:101; overflow:auto;}
#introbox		{ position:relative; margin:auto;width:650px;height:400px;display:none; z-index:101; overflow:auto; border:1px solid #818181; background:white; padding:10px; box-shadow: 4px 4px 4px #777;}

/* Map CSS */

   .labels {
     color: black;
     font-family: "Lucida Grande", "Arial", sans-serif;
     font-size: 10px;
     font-weight: bold;
     text-align: center;
     white-space: nowrap;
   }


	#micro { 
		position:absolute; 
