	#legend { 
		position:absolute; 
		top:75px; 
		right:9px; 
		padding:10px; 
		/*
		background: white;
		
		-moz-border-radius: 
		5px;border-radius: 5px; 
		*/
	}
	.legend-item {
		float:left; 
		width: 80px; 
		text-align:center; 
		background:#ddd;
		padding: 4px; 
		margin:2px;
		-moz-border-radius: 5px;
		border-radius: 5px;
		font-family:Arial, Helvetica, sans-serif; 
	}
	.legend-description {
		width: 400px;
		font-size:16px;
		font-family: Verdana, Geneva, sans-serif;
	}

	.legend-options { 
		font-size:11px;
		float:left; 
		text-align:center; 
		background:#D7DBE1;
		padding: 4px; 
		margin:2px;
		-moz-border-radius: 5px;
		border-radius: 5px;
		font-family:Arial, Helvetica, sans-serif; 
		width:80px;
		cursor:pointer; 
		line-height:20px;
	}
	.clear {
		clear:both;background:gainsboro; height:1px; margin:10px;
	}
	#radiationPointsToggleText {
		cursor:pointer; line-height:20px;padding: 4px; margin:2px;font-family:Arial, Helvetica, sans-serif;
	}
	
	.draggable {
		cursor:move;
	}
	
/* Slider CSS */
	.rangeGrip{
		width:10px;
		height:19px;
		cursor:e-resize;
		background-image: url('../images/slider.png');
		z-index:8;
	}
	
	.rangeDrag .rangeGrip, .rangeGrip:hover{
		background-position:right;
	}
	
	#text{
		color:#034a92;
		float:right;
	}
	
	#range{
		padding:0;
		border-spacing:0;
		margin:0;
		width: 600px;
		border:1px solid #999;
		color: #000;
		/*box-shadow: 2px 2px 2px #777;*/
	}
	#range td{
		height:33px;
		border:none;
		text-align:center;
		font-family:Verdana, Geneva, sans-serif;
		font-size:10px;
	}	
	
